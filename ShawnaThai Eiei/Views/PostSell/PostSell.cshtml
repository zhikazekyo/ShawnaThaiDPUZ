@model List<ShawnaThai_Eiei.Models.RiceType>
<!DOCTYPE html>
<html lang="en">
<head>
</head>
@using (Html.BeginForm("PostSell", "PostSell", FormMethod.Post, new { enctype = "multipart/form-data" }))
{


    <body id="page-top">
        @Html.AntiForgeryToken()
        <!-- Header -->
        <header class="masthead">
            <div class="container">
                <div class="intro-text">
                    <div class="intro-heading">ลงประกาศขาย</div>

                    <center>
                        <form class="form-horizontal">

                            <!-- Form Name -->
                            <!-- Text input-->
                            <div class="form-group">
                                <div class="col-md-4">

                                </div>
                            </div>
                            @*<div class="col-md-4">
                                    หมายเลขประกาศ
                                    <input id="ProD_IDSell" name="ProD_IDSell" type="text" placeholder="หมายเลขประกาศ." class="form-control input-md">

                                </div>*@

                            <div class="col-md-4">
                                Topic
                                <input id="ProD_Topic" name="ProD_Topic" type="text" placeholder="Topic." class="form-control input-md" />
                            </div>


                            <!-- Select Basic -->
                            <div class="form-group">

                                <div class="col-md-4">

                                    ระบุบค่าวามชื้น
                                    <input id="ProD_Moisture" name="ProD_Moisture" type="text" placeholder="โปรดใส่ค่าความชื้น %" class="form-control input-md">
                                    <label class="control-label"></label>

                                    <label class="control-label">เลือกไฟล์รูปข้าว</label>
                                    <div class="group">
                                        <input type="file" name="ProD_Pic" id="ProD_Pic" accept="image/png, image/jpeg" required />
                                        <p style="color:red ; font-weight:bold">@ViewBag.Message</p>
                                    </div>
                                </div>
                            </div>

                            <!-- Text input-->

                            <div class="form-group">

                                <div class="col-md-4">
                                    กรอกราคา
                                    <input id="ProD_Price" name="ProD_Price" type="number" placeholder="โปรดกรอกราคา" class="form-control input-md">

                                </div>
                            </div>

                            <div class="col-md-4">
                                ระบุบน้ำหนัก
                                <input id="ProD_Weight" name="ProD_Weight" type="text" placeholder="โปรดระบุน้ำหนักก เกวียน / ตัน" class="form-control input-md">

                                <label class="control-label">เลือกไฟล์รูปน้ำหนักข้าว</label>
                                <div class="group">
                                    <input type="file" name="ProD_CertiWeightRice" id="ProD_CertiWeightRice" accept="image/png, image/jpeg" required />
                                    <p style="color:red ; font-weight:bold">@ViewBag.Message2</p>
                                </div>
                            </div>


                            <!-- Text input-->
                            <div class="form-group">

                                <div class="col-md-4">
                                    สายพันธุ์

                                    <select class="form-control custom-select" input id="RType_Name" name="RType_Name" style="width:200px;">
                                        @foreach (var item in Model)
                                        {
                                            <option value="@item.RType_Name">@item.RType_Name</option>
                                        }
                                    </select>
                                    @*<input id="RType_Name" name="RType_Name" type="text" placeholder="สายพันธุ์" class="form-control input-md">*@

                                </div>
                                <div class="col-md-4">
                                    เลขประชาชน
                                    <input id="Farmer_IDCard" name="Farmer_IDCard" type="text" placeholder="หมายเลขประชาชนชาวนา" class="form-control input-md">

                                </div>



                            </div>

                            <!-- Button -->
                            <div class="form-group">
                                <label class="col-md-4 control-label" for="signup"></label>
                                <div class="col-md-4">

                                    <button id="sendMessageButton" class="btn btn-xl" type="submit">ลงประกาศขาย</button>
                                    <div>
                                        <font size="5" color="red" style="position:relative;top: 10px;right:10px">@ViewBag.Message</font>
                                    </div>
                                </div>
                            </div>





                        </form>
                    </center>

                </div>

            </div>

        </header>

    </body>
}
</html>