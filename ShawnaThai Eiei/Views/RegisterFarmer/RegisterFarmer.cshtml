@model List<ShawnaThai_Eiei.Models.Cooperative>

<!DOCTYPE html>
<html lang="en">

<head>

</head>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <body id="page-top">

        <!-- Header -->
        <header class="masthead">
            <div class="container">
                <br><br><br><br><br><br>

                <div class="intro-heading"><font size=7>ลงทะเบียนชาวนา</font></div>
                <center>


                    <form id="contactForm" name="sentMessage" novalidate>

                        <div class="form-group">

                            <div class="col-md-6">

                                <div class="form-group">
                                    <input class="form-control" id="Farmer_Name" name="Farmer_Name" type="text" placeholder="ชื่อ *" maxlength="30" required data-validation-required-message="ได้โปรดกรอก ชื่อ.">
                                    <p class="help-block text-danger"></p>
                                </div>
                                <div class="form-group">
                                    <input class="form-control" id="Farmer_LastName" name="Farmer_LastName" type="text" placeholder="นามสกุล*" maxlength="30" required data-validation-required-message="ได้โปรดกรอก  นามสกุล.">
                                    <p class="help-block text-danger"></p>
                                </div>
                                <div class="form-group">
                                    <input class="form-control" id="Farmer_Tel" name="Farmer_Tel" type="tel" placeholder="เบอร์โทรศัพท์ของชาวนา *" maxlength="10" required data-validation-required-message="ได้โปรดกรอก เบอร์โทรศัพท์ของชาวนา.">
                                    <p class="help-block text-danger"></p>
                                </div>

                                <select class="form-control custom-select" input id="Coop_Name" name="Coop_Name" style="width:200px;">
                                    @foreach (var item in Model)
                                    {
                                        <option value="@item.Coop_Name">@item.Coop_Name</option>
                                    }
                                </select>



                                <div class="form-group">
                                    <input class="form-control" id="Farmer_IDCard" name="Farmer_IDCard" type="text" placeholder="เลขบัตรประชาชน *" maxlength="13" required data-validation-required-message="โปรดใส่เลขบัตรประชาชน">

                                    <div class="form-group">
                                        <input type=file name=browse style="display: none;">
                                        <input type=text name=file value="">
                                        <input type=button onClick="browse.click();file.value=browse.value;" value="เลือกไฟล์รูปบัตรประชาชน">

                                        <p class="help-block text-danger"></p>


                                    </div>
                                    <div class="form-group">
                                        <input class="form-control" id="Farmer_A_No" name="Farmer_A_No" type="text" placeholder="บ้านเลขที่ *" maxlength="10" required data-validation-required-message="ได้โปรดกรอก บ้านเลขที่.">
                                        <p class="help-block text-danger"></p>
                                    </div>
                                    <div class="form-group">
                                        <input class="form-control" id="Farmer_A_Sup" name="Farmer_A_Sup" type="text" placeholder="ตำบล*" maxlength="20" required data-validation-required-message="ได้โปรดกรอก ตำบล.">
                                        <p class="help-block text-danger"></p>
                                    </div>
                                    <div class="form-group">
                                        <input class="form-control" id="Farmer_A_District" name="Farmer_A_District" type="text" placeholder="อำเภอ*" maxlength="20" required data-validation-required-message="ได้โปรดกรอก อำเภอ*.">
                                        <p class="help-block text-danger"></p>
                                    </div>

                                    <div class="form-group">
                                        <input class="form-control" id="Farmer_A_Province" name="Farmer_A_Province" type="text" placeholder="จังหวัด*" maxlength="20" required data-validation-required-message="ได้โปรดกรอก จังหวัด*.">
                                        <p class="help-block text-danger"></p>
                                    </div>

                                    <div class="clearfix"></div>
                                    <div class="col-lg-12 text-center">
                                        <div id="success"></div>
                                        <button id="sendMessageButton" class="btn btn-xl" type="submit">ลงทะเบียน</button>
                                        <br><br><br><br><br><br><br><br><br><br><br><br><br>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </form>
                </center>
            </div>

        </header>

    </body>
}
</html>
