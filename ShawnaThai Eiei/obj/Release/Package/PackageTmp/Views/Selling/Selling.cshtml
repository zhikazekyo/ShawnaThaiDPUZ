@model List<ShawnaThai_Eiei.Models.Product_Rice>

@{
    ViewBag.Title = "Selling";
}

@*@{
        Layout = "~/Views/Shared/_LayoutMember.cshtml";
    }*@

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>ชาวนาไทย เว็บตลาดข้าวออนไลน์</title>
    <!-- Bootstrap core CSS -->
    <link href="~/Bootstrap/vendor/bootstrap/css/bootstrap.css" rel="stylesheet">
    <!-- Custom fonts for this template -->
    <link href="~/Bootstrap/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">
    <link href='https://fonts.googleapis.com/css?family=Kaushan+Script' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Droid+Serif:400,700,400italic,700italic' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Roboto+Slab:400,100,300,700' rel='stylesheet' type='text/css'>
    <!-- Custom styles for this template -->
    <link href="~/Bootstrap/css/agency.min.css" rel="stylesheet">
    <style>
        .masthead {
            min-height: 1200px
        }
    </style>
</head>
<body id="page-top">

    <!-- Header -->
    <header class="masthead">
        <br><br>
        <div class="container">
            <center>
                <div class="shop-homepage">
                    <br><br><br>
                    <h1 class="my-4">ร้านค้าข้าวเปลือก</h1>
                    <div class="col-lg-9">

                        @if (HttpContext.Current.Session["AD_ID"] != null)
                        {
                            <a class="btn btn-xl" href="/PostSell/PostSell">ลงประกาศขายข้าว</a>
                                <a class="btn btn-xl" href="/HistoryTable/HistoryTable">ประวัติการซื้อ-ขายข้าว</a>

                        }
                        <div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel">
                            <ol class="carousel-indicators">
                                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                            </ol>
                            <div class="carousel-inner" role="listbox">
                                <div class="carousel-item active">
                                    <img class="d-block img-fluid" src="~/File/img/paddy5.jpg" alt="First slide">
                                </div>
                                <div class="carousel-item">
                                    <img class="d-block img-fluid" src="~/File/img/paddy6.jpg" alt="Second slide">
                                </div>
                                <div class="carousel-item">
                                    <img class="d-block img-fluid" src="~/File/img/paddy7.jpg" alt="Third slide">
                                </div>
                            </div>
                            <font color="#000000">
                                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Next</span>
                                </a>
                        </div>

                        <div class="row">
                            @foreach (var item in Model)
                            {
                                <div class="col-lg-4 col-md-6 mb-4">
                                    <div class="card h-100">
                                        <a href="~/Product/Product/@item.ProD_IDSell"><img class="card-img-top" src="@item.ProD_Pic" alt=""></a>
                                        <div class="card-body">
                                            <strong>
                                                <a href="~/Product/Product/@item.ProD_IDSell" title="@item.ProD_Topic">
                                                    @item.ProD_Topic
                                                </a>
                                            </strong>
                                            <div class="text-center">
                                                <font class="price" value="@item.ProD_Topic" name="ProD_Topic" type="text"></font><br>
                                            </div>


                                            ชื่อสายพันธุ์: <center><input id="RType_Name" name="RType_Name" type="text" value="@item.RType_Name" size="10" style="background: #C0F9BD" disabled /></center>  <br />
                                            ความชื้น: <center><input id="ProD_Moisture" name="ProD_Moisture" type="text" value="@item.ProD_Moisture" size="10" style="background: #C0F9BD" disabled /></center>  <br />
                                            ราคา: <center><input id="ProD_Price" name="ProD_Price" type="text" value="@item.ProD_Price" size="10" style="background: #C0F9BD" disabled /></center> <br />
                                            น้ำหนัก: <center><input id="ProD_Weight" name="ProD_Weight" type="text" value="@item.ProD_Weight" size="10" style="background: #C0F9BD" disabled /></center> <br />
                                            ชื่อสหกรณ์: <center><input id="Coop_Name" name="Coop_Name" type="text" value="@HttpContext.Current.Session["Coop_Name"]" size="10" style="background: #C0F9BD" disabled /></center> <br />


                                        </div>
                                    </div>
                                </div>
                            }


                        </div>
                        </font>
                    </div>
                </div>
                <center />
    </header>

</body>
</html>
